<%= form_with(model: hwahae_order, local: true) do |form| %>

  <div class="field">
	<h2>
		주문 수량
	  </h2>
    <%= form.number_field :order_account, value:1 %>
  </div>

  <div class="field">
    <%= form.date_select :order_date, { :discard_day => true, :discard_month => true, :discard_year => true }, value: Time.now%>
  </div>

  <div class="field">
    <%= form.hidden_field :order_type %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.hidden_field :product_id, value: @product.id %>
  </div>

  <div class="actions">
    <%= form.submit "주문하기" %>
  </div>
<% end %>
