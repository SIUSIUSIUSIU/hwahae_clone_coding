<p id="notice"><%= notice %></p>

<h1>Hwahae Comments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Comment text</th>
      <th>User</th>
      <th>Hwahae content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hwahae_comments.each do |hwahae_comment| %>
      <tr>
        <td><%= hwahae_comment.date %></td>
        <td><%= hwahae_comment.comment_text %></td>
        <td><%= hwahae_comment.user %></td>
        <td><%= hwahae_comment.hwahae_content %></td>
        <td><%= link_to 'Show', hwahae_comment %></td>
        <td><%= link_to 'Edit', edit_hwahae_comment_path(hwahae_comment) %></td>
        <td><%= link_to 'Destroy', hwahae_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>	
      </tr>
    <% end %>
  </tbody>
</table>

<br>

